<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/addClassify"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/noclassify"
            android:textColor="@color/main_color"
            app:layout_constraintBottom_toTopOf="@+id/tagView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/classify"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/rectbox"
            android:backgroundTint="@color/main_color"
            android:gravity="center"
            android:text="分类"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="@string/add_task"
            android:paddingStart="20dp"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/commit"
            app:layout_constraintStart_toEndOf="@+id/classify" />

        <TextView
            android:id="@+id/commit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rectbox"
            android:backgroundTint="@color/main_color"
            android:gravity="center"
            android:text="DO"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.moxun.tagcloudlib.view.TagCloudView
            android:id="@+id/tagView"
            android:layout_width="338dp"
            android:layout_height="268dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:autoScrollMode="uniform"
            app:layout_constraintBottom_toTopOf="@+id/content"
            app:layout_constraintDimensionRatio="w,4:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent">

        </com.moxun.tagcloudlib.view.TagCloudView>


    </android.support.constraint.ConstraintLayout>
</layout>