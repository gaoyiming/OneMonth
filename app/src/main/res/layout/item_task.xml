<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:sml="http://schemas.android.com/apk/res-auto"

    >
    <data>

        <variable
            name="task"
            type="com.mrgao.onemonth.bean.Task" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rectbox"
                android:backgroundTint="@color/main_color"
                android:paddingBottom="2dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:text="@{task.classify}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_big" />
        </RelativeLayout>

        <com.tubb.smrv.SwipeHorizontalMenuLayout
            android:id="@+id/sml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sml:sml_auto_open_percent="0.2"
            sml:sml_scroller_duration="750"
            sml:sml_scroller_interpolator="@android:anim/bounce_interpolator">

            <include
                android:id="@id/smContentView"
                layout="@layout/item_task_content"
                bind:task="@{task}" />

            <include
                android:id="@id/smMenuViewLeft"
                layout="@layout/item_task_left" />

            <include
                android:id="@id/smMenuViewRight"
                layout="@layout/item_task_reght" />

        </com.tubb.smrv.SwipeHorizontalMenuLayout>

    </LinearLayout>
</layout>